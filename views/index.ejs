<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>My Todo List</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <header>
    <div class="box">
      <h1>My Todo List</h1>
    </div>
  </header>

  <div class="box">
    <form action="/add" method="post" class="item">
      <input type="text" name="task" placeholder="Enter your task here">
      <select name="priority">
        <option>Low</option>
        <option>Medium</option>
        <option>High</option>
      </select>
      <button type="submit">Add</button>
    </form>
  </div>

  <div class="box">
    <% if (todos.length === 0) { %>
      <p style="text-align:center;">No tasks added yet.</p>
    <% } else { %>
      <% todos.forEach((todo, i) => { %>
        <div class="item task-item">
          <input type="checkbox" id="task-<%= i %>">
          <label for="task-<%= i %>"><%= todo.text %> (<%= todo.priority %>)</label>

          <form action="/edit" method="post" class="inline-form">
            <input type="hidden" name="index" value="<%= i %>">
            <input type="text" name="updatedTask" placeholder="Change task">
            <button type="submit" class="edit-btn">Edit</button>
          </form>

          <form action="/delete" method="post" class="inline-form">
            <input type="hidden" name="index" value="<%= i %>">
            <button type="submit" class="delete-btn">Delete</button>
          </form>
        </div>
      <% }) %>
    <% } %>
  </div>

  <div class="filter">
    <form action="/filter" method="post">
      <label>Filter by priority:</label>
      <select name="priorityFilter" onchange="this.form.submit()">
        <option <%= filter==='All' ? 'selected' : '' %>>All</option>
        <option <%= filter==='Low' ? 'selected' : '' %>>Low</option>
        <option <%= filter==='Medium' ? 'selected' : '' %>>Medium</option>
        <option <%= filter==='High' ? 'selected' : '' %>>High</option>
      </select>
    </form>
  </div>

  <footer>
    <p>Â© 2025 by Sadhvi Kumari</p>
  </footer>
</body>
</html>

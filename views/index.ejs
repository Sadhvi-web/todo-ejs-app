<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Todo list</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <header>
        <div class="box">
            <h1>Todo List</h1>
        </div>
    </header>
    
    <div class="box">
      <form action="/add" method="post" class="item">
        <input type="text" name="task" placeholder="Enter a task" />
        <select name="priority">
          <option value="Low">Low</option>
          <option value="Medium">Medium</option>
          <option value="High">High</option>
        </select>
        <button type="submit">Add</button>
      </form>
    </div>

    <div class="box">
      <% if (todos.length === 0) { %>
        <p style="text-align:center;">No tasks yet.</p>
      <% } else { %>
        <% todos.forEach((todo, index) => { %>
        <div class="item task-item">
          <input type="checkbox" name="completed" id="task-<%= index %>">
          <label for="task-<%= index %>"><%= todo.text %> (<%= todo.priority %>)</label>


          <form action="/edit" method="post" class="inline-form">
            <input type="hidden" name="index" value="<%= index %>">
            <input type="text" name="updatedTask" placeholder="Edit task">
            <button type="submit" class="edit-btn">Edit</button>
          </form>

          <form action="/delete" method="post" class="inline-form">
            <input type="hidden" name="index" value="<%= index %>">
            <button type="submit" class="delete-btn">Delete</button>
          </form>
        </div>
        <% }) %>
      <% } %>
    </div>

    <div class="filter">
      <form action="/filter" method="post">
        <label for="priorityFilter">Filter by priority:</label>
        <select name="priorityFilter" id="priorityFilter" onchange="this.form.submit()">
          <option <%= filter==='All'?'selected':'' %> >All</option>
          <option <%= filter==='Low'?'selected':'' %> >Low</option>
          <option <%= filter==='Medium'?'selected':'' %> >Medium</option>
          <option <%= filter==='High'?'selected':'' %> >High</option>
        </select>
      </form>
    </div>
    
    <footer>
        <p>Â© 2025 Todo List App</p>
    </footer>
</body>
</html>